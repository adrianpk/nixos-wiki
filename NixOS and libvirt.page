    virtualisation.libvirtd.enable = true;
    virtualisation.libvirtd.enableKVM = true;
    virtualisation.libvirtd.extraConfig = "
         unix_sock_group = \"libvirtd\"
         unix_sock_ro_perms = \"0777\"
         unix_sock_rw_perms = \"0770\"
         auth_unix_ro = \"none\"
         auth_unix_rw = \"none\"
    ";
